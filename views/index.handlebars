	<h3>Create a Biz</h3>

	<form class="create-update-form" action="/biz" method="POST">
		<div class="form-group">
			<label for="name">Business Name:</label>
			<input type="text" id="name" name="biz_name"><br>
			<label for="desc">Description:</label>
			<input type="text" id="desc" name="biz_desc"><br>
			<label for="desc">Category:</label>
			<input type="text" id="cat" name="biz_cat"><br>
			<label for="desc">image:</label>
			<input type="text" id="image" name="biz_image"><br>
			<label for="desc">Street Address:</label>
			<input type="text" id="street" name="biz_street"><br>
			<label for="city">City:</label>
			<input type="text" id="city" name="biz_city"><br>
			<label for="state">State:</label>
			<input type="text" id="state" name="biz_state"><br>
			<label for="desc">geo_lat:</label>
			<input type="text" id="lat" name="biz_lat"><br>
			<label for="desc">geo_long:</label>
			<input type="text" id="long" name="biz_long"><br>
			<button id="submit" type="submit">Submit</button>
		</div>
	</form>

	<p>List of Businesses in the DB</p>


	<div id="Businesses">
		<h3>Businesses</h3>
		<div class="Businesses">
			{{#each businesses}}

							<div class="bizResult">
								<p class="bizName">{{this.biz_name}}</p>
								<p class="bizDesc">Description: {{this.biz_desc}}</p>
								<p class="bizCat">Category Id: {{this.fk_catId}}</p>
								<p class="bizimage">Image URL: {{this.biz_image}}</p>
								<p class="bizstreet">Address: {{this.biz_street}}</p>
								<p class="bizCity">City: {{this.biz_city}}</p>
								<p class="bizState">State: {{this.biz_state}}</p>
								<p class="bizLat">Geo Lat: {{this.biz_lat}}</p>
								<p class="bizLong">Geo Long: {{this.biz_long}}</p>
								<p class="bizCreateAt">Created At: {{this.createdAt}}</p>
								<p class="bizUpdateAt">Updated At: {{this.updatedAt}}</p>
							</div>

					{{/each}}
		</div>
	</div>



